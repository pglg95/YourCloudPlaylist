<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/connection_error"
            android:id="@+id/connectionerrTextView"
            android:layout_marginTop="162dp" android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" android:onClick="onRefreshButtonClick"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/refresh"
            android:id="@+id/refreshButton" android:layout_alignParentBottom="true"
            android:layout_marginBottom="106dp" android:layout_alignEnd="@+id/connectionerrTextView"
            android:layout_alignStart="@+id/connectionerrTextView"/>
</RelativeLayout>